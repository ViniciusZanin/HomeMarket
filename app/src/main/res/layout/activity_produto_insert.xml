<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ufabc.kleinzanin.homemarket.ProdutoInsert"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nome do Produto" />
        <EditText android:id="@+id/insert_produto_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Produto" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:text="Consumo Mensal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox android:id="@+id/insert_produto_check" android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <EditText android:id="@+id/insert_produto_consumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Consumo Mensal"
            android:visibility="invisible"
            android:inputType="number"
            android:numeric="integer"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:text="Quantidade atual do Produto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText android:id="@+id/insert_produto_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade atual"
            android:inputType="number"
            android:numeric="integer"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:text="Unidade do produto(Kg,g,L,etc)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/insert_unit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:text="Preço por unidade(g,kg,etc)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />

        <EditText android:id="@+id/insert_produto_preço"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preço(R$)"
            android:inputType="numberDecimal"/>
        </LinearLayout>
    <LinearLayout android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button android:id="@+id/insert_codigo_barra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir Codigo de Barra"/>

        <Button android:id="@+id/insert_produto_imagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir imagem"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView android:id="@+id/insert_thumbs"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/thumbnail_height"
            android:visibility="invisible"/>

        </LinearLayout>


</LinearLayout>
