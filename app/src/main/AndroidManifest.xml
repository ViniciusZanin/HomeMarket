<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufabc.kleinzanin.homemarket" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Despensa"
            android:label="@string/title_activity_despensa"
            android:parentActivityName=".MenuPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ufabc.kleinzanin.homemarket.MenuPrincipal" />
        </activity>
        <activity
            android:name=".DespensaListFragment"
            android:label="@string/title_activity_despensa_list_fragment" >
        </activity>
        <activity
            android:name=".DespensaDetailFragment"
            android:label="@string/title_activity_despensa_detail_fragment" >
        </activity>
        <activity
            android:name=".ProdutoInsert"
            android:label="@string/title_activity_produto_insert" >
        </activity>
    </application>

</manifest>
